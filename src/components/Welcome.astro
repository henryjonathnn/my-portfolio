---
// src/pages/index.astro
import { Image } from 'astro:assets';
import profileImage from '../assets/profile.jpg';
---

<div class="bg-gradient-to-br from-[#0f0720] via-[#1a1a3a] to-[#2a1a4a] text-white">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
		{/* Navigation */}
		<nav class="flex items-center justify-between py-6">
		  <div class="flex items-center">
			<div class="flex items-center space-x-2">
			  <div class="w-4 h-4 bg-purple-500 rounded-full"></div>
			  <span class="text-xl font-bold text-white">Hyura Dev</span>
			</div>
		  </div>
	
		  <div class="hidden md:flex items-center space-x-6">
			<a href="#about" class="text-gray-300 hover:text-white transition">About</a>
			<a href="#projects" class="text-gray-300 hover:text-white transition">Projects</a>
			<a href="#skills" class="text-gray-300 hover:text-white transition">Skills</a>
			<a href="#contact" class="text-gray-300 hover:text-white transition">Contact</a>
	
			<a
			  href="#contact"
			  class="bg-white/10 hover:bg-white/20 px-4 py-2 rounded-lg transition"
			>
			  Hire Me
			</a>
		  </div>
		</nav>
	
		{/* Hero Section */}
		<div
		  class="grid md:grid-cols-2 gap-12 items-center pt-16 lg:pt-24 relative"
		>
		  {/* Left Content */}
		  <div>
			<div
			  class="absolute top-0 left-0 w-72 h-72 bg-purple-600/30 rounded-full blur-3xl"
			>
			</div>
	
			<div class="relative z-10">
			  <span
				class="bg-white/10 px-3 py-1 rounded-full text-sm mb-4 inline-block"
			  >
				ðŸš€ Full Stack Developer & Tech Innovator
			  </span>
	
			  <h1 class="text-5xl md:text-6xl font-bold mb-6">
				Crafting Digital <br />
				<span
				  class="text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-pink-500"
				>
				  Experiences
				</span>
			  </h1>
	
			  <p class="text-gray-400 text-lg mb-8">
				Transforming ideas into robust, scalable web solutions. 
				Specializing in creating innovative and efficient digital products 
				that solve real-world problems.
			  </p>
	
			  <div class="flex space-x-4">
				<a
				  href="#projects"
				  class="bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-3 rounded-lg hover:from-purple-700 hover:to-pink-700 transition"
				>
				  View Projects
				</a>
				<a
				  href="#contact"
				  class="border border-white/20 px-6 py-3 rounded-lg hover:bg-white/10 transition"
				>
				  Contact Me
				</a>
			  </div>
	
			  <div class="mt-12 flex items-center space-x-4">
				<div class="flex -space-x-2">
				</div>
				<span class="text-gray-400">Trusted by 10+ Clients</span>
			  </div>
			</div>
		  </div>
		</div>
	
		{/* Statistics */}
		<div class="grid md:grid-cols-4 gap-8 mt-16 text-center">
		  <div>
			<h3
			  class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-pink-500"
			>
			  10+
			</h3>
			<p class="text-gray-400 mt-2">Completed Projects</p>
		  </div>
		  <div>
			<h3
			  class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-pink-500"
			>
			  100%
			</h3>
			<p class="text-gray-400 mt-2">Client Satisfaction</p>
		  </div>
		  <div>
			<h3
			  class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-pink-500"
			>
			  5+
			</h3>
			<p class="text-gray-400 mt-2">Years of Experience</p>
		  </div>
		  <div>
			<h3
			  class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-pink-500"
			>
			  24/7
			</h3>
			<p class="text-gray-400 mt-2">Support Available</p>
		  </div>
		</div>
	  </div>
	
	  {/* Decorative Elements */}
	  <div
		class="fixed top-0 right-0 w-96 h-96 bg-purple-600/20 rounded-full blur-3xl -z-10"
	  >
	  </div>
	  <div
		class="fixed bottom-0 left-0 w-72 h-72 bg-pink-600/20 rounded-full blur-3xl -z-10"
	  >
	  </div>
  {/* Blur Background Effects */}
  <div class="fixed top-0 right-0 w-96 h-96 bg-purple-600/20 rounded-full blur-3xl -z-10"></div>
  <div class="fixed bottom-0 left-0 w-72 h-72 bg-pink-600/20 rounded-full blur-3xl -z-10"></div>
</div>